{
    "src_folders": ["test"],
    "output_folder": "test/reports",
    "custom_commands_path": "",
    "custom_assertions_path": "",
    "page_objects_path": "test/page-objects",
    "globals_path": "",
    "test_runner": {
        "type": "mocha",
        "options": { }
    },

    "selenium": {
        "start_process": false,
        "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/3.8.1-server.jar",
        "log_path": "./test/reports",
        "host": "localhost",
        "port": 4444
    },
    "test_settings": {
        "default": {
            "launch_url": "https://localhost:5426",
            "selenium_port": 4444,
            "selenium_host": "localhost",
            "silent": true,
            "screenshots": {
                "enabled": false,
                "path": ""
            },
            "desiredCapabilities": {
                "browserName": "gecko",
                "javascriptEnabled": true,
                "marionette": true,
                "acceptInsecureCerts": true,
                "moz:firefoxOptions": {
                    "args": ["-headless"]
                },
                "moz:webdriverClick": true
            }
        }
    }
}
